<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_color_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="digitalgarden.mecsek.color.ColorPickerActivity"
        tools:showIn="@layout/activity_style_picker">

    <digitalgarden.mecsek.viewutils.BoxAndTextView
            android:id="@+id/title_cell_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:verticalSpacing="4dp"
            android:horizontalSpacing="4dp"/>

    <digitalgarden.mecsek.color.StylePickerCheckedLayout
            android:id="@+id/color_checked_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:padding="4dp"
            app:columns="8"
            app:rows="8"
            android:verticalSpacing="4dp"
            android:horizontalSpacing="4dp"/>

    <digitalgarden.mecsek.viewutils.ExternalCheckedLayout
            android:id="@+id/color_button_checked_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="4dp"
            app:columns="4"
            app:rows="1"
            android:verticalSpacing="4dp"
            android:horizontalSpacing="4dp"/>

    <digitalgarden.mecsek.viewutils.ExternalCheckedLayout
            android:id="@+id/longstyle_button_checked_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="4dp"
            app:columns="4"
            app:rows="1"
            android:verticalSpacing="4dp"
            android:horizontalSpacing="4dp"
            android:visibility="gone"/>

</LinearLayout>
