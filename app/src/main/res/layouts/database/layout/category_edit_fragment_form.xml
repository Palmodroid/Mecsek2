<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context=".tables.category.CategoriesControllActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_category_name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <digitalgarden.mecsek.formtypes.EditFieldText
        android:id="@+id/editfieldtext_category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_category_name" />

    <TextView
        android:id="@+id/title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_category_style"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textview_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hint_category_style" />

	<digitalgarden.mecsek.formtypes.StyleButton
        android:id="@+id/stylebutton_category_style"
        android:src="@drawable/color"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:adjustViewBounds="true"
        android:padding="8dp"
        android:scaleType="fitCenter"/>

</LinearLayout>		   
