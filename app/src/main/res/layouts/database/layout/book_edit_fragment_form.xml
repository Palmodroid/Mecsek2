<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context=".tables.books.BooksControllActivity"
	android:layout_width="match_parent"
	android:layout_height="wrap_content" 
	android:orientation="vertical" >

	<digitalgarden.mecsek.fieldtypes.FieldImage
        android:id="@+id/image_book"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="right"
        android:scaleType="centerInside"
        android:src="@drawable/smallballoons" />

    <TextView
        android:id="@+id/title_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_author"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <digitalgarden.mecsek.fieldtypes.EditFieldText
        android:id="@+id/edittext_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:text="@string/hint_title"
        
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:background="@drawable/border"
        android:layout_margin="2dp"/>

    <TextView
        android:id="@+id/title_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_title"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <digitalgarden.mecsek.fieldtypes.EditFieldText
        android:id="@+id/edittext_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_title" />
    
</LinearLayout>		   
