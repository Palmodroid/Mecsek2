<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context=".color.ColorDefsControllActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_color"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <digitalgarden.mecsek.formtypes.EditFieldText
        android:id="@+id/edittext_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_color" />

	<TextView
		android:id="@+id/title_value"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/title_value"
		android:textAppearance="?android:attr/textAppearanceMedium" />

	<digitalgarden.mecsek.formtypes.EditFieldColor
		android:id="@+id/edittext_value"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="@string/hint_value" />

</LinearLayout>
