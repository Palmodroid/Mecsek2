<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context=".database.medications.MedicationsControllActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation="vertical" >

	<TextView
		android:id="@+id/title_pill"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/title_pill"
		android:textAppearance="?android:attr/textAppearanceMedium" />

	<digitalgarden.mecsek.formtypes.EditFieldText
		android:id="@+id/foreigntext_pill_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"

		android:text="@string/hint_pill"

		android:textAppearance="?android:attr/textAppearanceMedium"
		android:background="@drawable/border"
		android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/title_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_patient"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:layout_margin="5dp" >

        <digitalgarden.mecsek.formtypes.EditFieldText
            android:id="@+id/foreigntext_patient_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hint_patient"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <digitalgarden.mecsek.formtypes.EditFieldText
            android:id="@+id/foreigntext_patient_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - dob - "
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

	<TextView
        android:id="@+id/title_medication_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_medication_name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <digitalgarden.mecsek.formtypes.EditFieldText
        android:id="@+id/edittextfield_medication_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_medication_name" />

    <TextView
        android:id="@+id/title_medication_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_medication_date"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <digitalgarden.mecsek.formtypes.EditFieldDate
        android:id="@+id/editdatefield_medication_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_medication_date" />

    <TextView
        android:id="@+id/title_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_medication_note"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <digitalgarden.mecsek.formtypes.EditFieldText
        android:id="@+id/externtext_calendar_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_medication_note" />

</LinearLayout>
